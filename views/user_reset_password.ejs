<div class="header-styl">
  <h1>
    Reset Password
    <!-- / <%= title %> -->
  </h1>
</div>
<div class="form">
  <form action="/users/user-reset-password" method="POST">
    <div class="form-input">
      <input type="email" name="email" placeholder="Your email" required />
    </div>
    <div class="form-input">
      <input
        type="password"
        name="password"
        placeholder="Your password"
        required
      />
    </div>
    <div class="form-input">
      <input
        type="password"
        name="confirm_password"
        placeholder="Confirm password"
        required
      />
    </div>
    <div class="form-input">
      <input type="Submit" value="Reset Password" class="btn-styl" />
    </div>
  </form>
</div>

<div class="header-styl">
  <h1>SIGN IN</h1>
</div>
<div class="form">
  <form action="/users/create-session" method="POST">
    <div class="form-input">
      <input type="email" name="email" placeholder="Your email" required />
    </div>

    <div class="form-input">
      <input
        type="password"
        name="password"
        placeholder="Your password"
        required
      />
    </div>
    <div class="form-input">
      <input type="Submit" value="SIGN IN" class="btn-styl"/>
    </div>
  </form>
</div>
<div class="actions">
  <div class="links">Don't have an account?</div>
  <div class="links"><a href="sign-up">Sign Up</a></div>
</div>
